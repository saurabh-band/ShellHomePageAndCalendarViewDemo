<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             x:Class="CascadePOCHomePage.View.CalenderView"
             Title="CalenderView">
    
    <StackLayout>
       
        <Grid>
            <calendar:SfCalendar VerticalOptions="FillAndExpand"
                                 x:Name="Calendar" 
                                 View="Month"
                                 HeightRequest="300">
            </calendar:SfCalendar>
        </Grid>
    
        <Grid>
            <ScrollView>
                <StackLayout>
                    <Line Aspect="Fill"  Stroke="Black" X1="1" Margin="10"/>
                    <Label Text=" CALENDER VIEW" TextColor="Black" Margin="15"/>
                    <Line Aspect="Fill" Stroke="Black" X1="1"/>
                </StackLayout>
            </ScrollView>
        </Grid>
        
    </StackLayout>
        
</ContentPage>